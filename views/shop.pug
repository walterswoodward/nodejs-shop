doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title #{docTitle}
  link(rel='stylesheet' href='/css/bootstrap.min.css')
header
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container-fluid
      a.navbar-brand(href='/') NodeJS Shop
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.nav-link.active(href='/') Shop
          a.nav-link(href='/admin/add-product') Add Product
main.m-3
    if prods.length > 0
        .grid
            each product in prods
                article.card(style='width: 18rem;')
                    img.card-img-top(src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQtfcsJm7Qsd7mblIQo4VLuPN6CfFc70mySwQ&usqp=CAU' alt='Card image cap')
                    .card-body
                        h5.card-title Card title
                        h6.product__price $19.99
                        p.card-text.product__description
                        | A nice book for you to read in the shade of a palm tree on the beach.
                        hr
                        button.btn.btn-danger(href='#') Add to Cart
    else
        h1 No Products

